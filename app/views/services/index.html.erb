<p id="notice"><%= notice %></p>

<h2>Услуги Автосервиса</h2>

<table>
  <thead>
    <tr>
      <th>Наименование:</th>
      <th>Категория:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.sort.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.category.name %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать новую услугу', new_service_path %>
